<Window x:Class="CollisionEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CollisionEditorC#" Height="440" Width="600">

    <Grid Name="MyGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="164*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="38*" />
            <ColumnDefinition Width="26*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="38*" />
            <ColumnDefinition Width="26*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="38*" />
            <ColumnDefinition Width="26*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="17*" />
            <ColumnDefinition Width="278*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Center" Grid.Column="0"  Grid.ColumnSpan="15" Foreground="Black" Height="20">
            <MenuItem Header="File">
                <MenuItem Header="Load" >
                    <MenuItem Header="TileMap........               Ctrl+D" Command="{Binding MenuOpenTileMapCommand}" Padding="0,0,-20,0"/>
                    <MenuItem Header="AngleMap...     Ctrl+W" Command="{Binding MenuOpenAngleMapCommand}" Padding="0,0,-20,0"/>
                </MenuItem>

                <MenuItem Header="Unload">
                    <MenuItem Header="Tile Strip"/>
                    <MenuItem Header="Anglemap"/>
                </MenuItem>

                <MenuItem Header="Unload All     CTRL+A" Padding="0,0,-20,0"  />

                <MenuItem Header="Save">
                    <MenuItem Header="AngleMap" Command="{Binding MenuSaveAngleMapCommand}"/>
                    <MenuItem Header="HeightMap" Command="{Binding MenuSaveHeightMapCommand}"/>
                    <MenuItem Header="WidthMap" Command="{Binding MenuSaveWidthMapCommand}"/>
                    <MenuItem Header="TileMap" Command="{Binding MenuSaveTileMapCommand}"/>
                </MenuItem>

                <MenuItem Header="Save Al          Ctrl+S" Padding="0,0,-20,0" Command="{Binding MenuSaveAllCommand}"/>
                <MenuItem Header="Exit                         Alt+F4" Padding="0,0,-20,0" Command="{Binding ExitAppCommand}"/>

            </MenuItem>
            <MenuItem Header="Help" >
                <MenuItem Header="Due to the memetic danger caused by SCP-[DATA DELETED] help has been removed" FontFamily="Webdings"  />
            </MenuItem>
        </Menu>

        <Image Grid.Column="0" Grid.Row="3" Height="128" RenderOptions.BitmapScalingMode="NearestNeighbor"  Width="128" Name ="ImageOfTile" Grid.ColumnSpan="11"/>
        <Image Grid.Column="0" Grid.Row="3" Source="/Сетка.png" Height="129" Width="129" Grid.ColumnSpan="11"/>
        <Canvas Grid.Column="0" Grid.Row="3"  Height="128" Width="128" Name ="canvasForRectangles" Grid.ColumnSpan="11" Focusable="True" MouseLeftButtonDown="CanvasForRectanglesMouseLeftButtonDown" MouseRightButtonDown="CanvasForRectanglesMouseRightButtonDown" Background="Transparent"/>
        <Canvas Grid.Column="0" Grid.Row="3"  Height="128" Width="128" Name ="canvasForLine" Grid.ColumnSpan="11"/>
        
        <Border Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="8" Background="GhostWhite" BorderBrush="Silver" BorderThickness="0.8,0.8,0.8,2" CornerRadius="3,3,3,3">
            <TextBlock x:Name="Heights" HorizontalAlignment="Center"/>
        </Border>

        <Border Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="8" Background="GhostWhite" BorderBrush="Silver" BorderThickness="0.8,0.8,0.8,2" CornerRadius="3,3,3,3">
            <TextBlock x:Name="Widths" HorizontalAlignment="Center"/>
        </Border>

        <TextBlock Grid.Column="2" Grid.Row="9" TextWrapping="Wrap" Text="0" Name="TextBlockByteAngle" Padding="2,0,0,0"  Background="#FFB1B1B1" />
        <TextBlock Grid.Column="5" Grid.Row="9" TextWrapping="Wrap" Text="0x00" Name="TextBlockHexAngle"  Padding="2,0,0,0"  Background="#FFB1B1B1"/>
        <TextBlock Grid.Column="8" Grid.Row="9" TextWrapping="Wrap" Text="0'" Name="TextBlockFullAngle"  Padding="2,0,0,0"  Background="#FFB1B1B1"/>
        
        <Button Grid.Column="3" Command="{Binding AngleIncrementCommand}" Grid.Row="9" Height="10" Width="25" VerticalAlignment="Top" HorizontalAlignment="Left" Background="#FFDEDDDD">
            <Path Fill="Black" Data="M 0 6 L 12 6 L 6 0 Z" Height="6" Width="12"/>
        </Button>
        <Button Grid.Column="3" Command="{Binding AngleDecrementCommand}" Grid.Row="9" Height="10" Width="25" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Path Fill="Black" Data="M 0 0 L 6 6 L 12 0 Z"/>
        </Button>

        <Button Grid.Column="6" Command="{Binding AngleIncrimentCommand}"  Grid.Row="9" Height="10" Width="25" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Path Fill="Black" Data="M 0 6 L 12 6 L 6 0 Z" Height="6" Width="12"/>
        </Button>
        <Button Grid.Column="6" Command="{Binding AngleDecrementCommand}" Grid.Row="9" Height="10" Width="25" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Path Fill="Black" Data="M 0 0 L 6 6 L 12 0 Z"/>
        </Button>

        <Button Grid.Column="9" Command="{Binding AngleIncrimentCommand}"  Grid.Row="9" Height="10" Width="25" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Path Fill="Black" Data="M 0 6 L 12 6 L 6 0 Z" Height="6" Width="12"/>
        </Button>
        <Button Grid.Column="9" Command="{Binding AngleDecrementCommand}" Grid.Row="9" Height="10" Width="25" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Path Fill="Black" Data="M 0 0 L 6 6 L 12 0 Z"/>
        </Button>


        <TextBox Grid.Column="11" Grid.Row="2" TextWrapping="Wrap" Background="#FFD8D8D8" Text="{Binding ChosenTile,Mode=TwoWay}" Grid.ColumnSpan="2" Margin="16,0,172,0"/>
        <Button Grid.Column="12" Grid.Row="2" Background="#FFD8D8D8" Content="Select Tile" Command="{Binding SelectTileCommand}" Margin="125,0,0,0" />
    </Grid>
    <Window.InputBindings>
        <KeyBinding Command="{Binding MenuOpenTileMapCommand}" Gesture="CTRL+D" />
        <KeyBinding Command="{Binding MenuOpenAngleMapCommand}" Gesture="CTRL+W" />
        <KeyBinding Command="{Binding MenuUnloadAllCommand}" Gesture="CTRL+A" />
        <KeyBinding Command="{Binding MenuSaveAllCommand}" Gesture="CTRL+S" />
    </Window.InputBindings>
</Window>
