<Window x:Class="CollisionEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CollisionEditorC#" Height="440" Width="550">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="381*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="258*" />
            <ColumnDefinition Width="17*" />
            <ColumnDefinition Width="257*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Center" Grid.Column="0"  Grid.ColumnSpan="5" Foreground="Black" Height="20">
            <MenuItem Header="File" >
                <MenuItem Header="Load" >
                    <MenuItem Header="Tile Strip......               Ctrl+O" Padding="0,0,-20,0"/>
                    <MenuItem Header="Anglemap...     Ctrl+Shift+O" Click="MenuOpenAngleMapClick" Padding="0,0,-20,0"/>
                </MenuItem>

                <MenuItem Header="Unload"  >
                    <MenuItem Header="Tile Strip"/>
                    <MenuItem Header="Anglemap"/>
                </MenuItem>

                <MenuItem Header="Unload All     Ctrl+Shift+U" Padding="0,0,-20,0"  />

                <MenuItem Header="Save">
                    <MenuItem Header="Anglemap"/>
                    <MenuItem Header="Heightmap"/>
                    <MenuItem Header="Widthmap"/>
                    <MenuItem Header="Tiletmap"/>
                </MenuItem>

                <MenuItem Header="Save Al          Ctrl+Shift+S" Padding="0,0,-20,0" />
                <MenuItem Header="Exit                         Alt+F4" Padding="0,0,-20,0" />

            </MenuItem>
            <MenuItem Header="Help" >
                <MenuItem Header="Help is not exist" />
            </MenuItem>
        </Menu>
        
    </Grid>
</Window>