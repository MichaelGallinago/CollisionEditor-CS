<Window x:Class="CollisionEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CollisionEditorC#" Height="440" Width="600"
        xmlns:local="clr-namespace:CollisionEditor.viewModel">

    <Grid Name="MyGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="164*"/>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="29*" />
            <ColumnDefinition Width="31*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="29*" />
            <ColumnDefinition Width="31*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="29*" />
            <ColumnDefinition Width="31*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="17*" />
            <ColumnDefinition Width="290*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Center" Grid.Column="0"  Grid.ColumnSpan="15" Foreground="Black" Height="20">
            <MenuItem Header="File" >
                <MenuItem Header="Load" >
                    <MenuItem Header="Tile Strip......               Ctrl+O" Name = "MenuOpenTileStrip" Padding="0,0,-20,0"/>
                    <MenuItem Header="Anglemap...     Ctrl+Shift+O" Name = "MenuOpenAngleMap" Padding="0,0,-20,0"/>
                </MenuItem>

                <MenuItem Header="Unload"  >
                    <MenuItem Header="Tile Strip"/>
                    <MenuItem Header="Anglemap"/>
                </MenuItem>

                <MenuItem Header="Unload All     Ctrl+Shift+U" Padding="0,0,-20,0"  />

                <MenuItem Header="Save">
                    <MenuItem Header="Anglemap"/>
                    <MenuItem Header="Heightmap"/>
                    <MenuItem Header="Widthmap"/>
                    <MenuItem Header="Tiletmap" Name = "MenuSaveTiletmap"/>
                </MenuItem>

                <MenuItem Header="Save Al          Ctrl+Shift+S" Padding="0,0,-20,0" />
                <MenuItem Header="Exit                         Alt+F4" Padding="0,0,-20,0" />

            </MenuItem>
            <MenuItem Header="Help" >
                <MenuItem Header="Due to the memetic danger caused by SCP-[DATA DELETED] help has been removed" FontFamily="Webdings"  />
            </MenuItem>
        </Menu>

        <Image Grid.Column="0" Grid.Row="3" Height="128" RenderOptions.BitmapScalingMode="NearestNeighbor"  Width="128" Name ="ImageOfTile" Grid.ColumnSpan="11"/>
        <Image Grid.Column="0" Grid.Row="3" Source="/Сетка.png" Height="129" Width="129" Grid.ColumnSpan="11" Name ="ImageOfTileGrid" MouseLeftButtonDown="ImageOfTileGridMouseLeftButtonDown" MouseRightButtonDown="ImageOfTileGridMouseRightButtonDown"/>
        <TextBlock Grid.Column="2" Grid.Row="5" TextWrapping="Wrap" Text="0" Name="TextBlock256Angle" Grid.ColumnSpan="2" Background="#FFD8D8D8" />
        <TextBlock Grid.Column="5" Grid.Row="5" TextWrapping="Wrap" Text="0x00" Name="TextBlockHexAngle" Grid.ColumnSpan="2" Background="#FFD8D8D8"/>
        <TextBlock Grid.Column="8" Grid.Row="5" TextWrapping="Wrap" Text="0'" Name="TextBlock360Angle" Grid.ColumnSpan="2" Background="#FFD8D8D8"/>
        <Canvas Grid.Column="0" Grid.Row="3"  Height="128" Width="128" Name ="canvasForRectangles" Grid.ColumnSpan="11"/>
        <Canvas Grid.Column="0" Grid.Row="3"  Height="128" Width="181" Name ="canvasForLine" Grid.ColumnSpan="11"/>

        <Button Grid.Column="3" Command="{Binding AngleAdd1Command}" Grid.Row="5" Height="10" Width="30" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Path Fill="Black" Data="M 0 6 L 12 6 L 6 0 Z" Height="6" Width="12"/>
        </Button>
        <Button Grid.Column="3" Command="{Binding AngleDeduct1Command}" Grid.Row="5" Height="10" Width="30" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Path Fill="Black" Data="M 0 0 L 6 6 L 12 0 Z"/>
        </Button>

        <Button Grid.Column="6" Command="{Binding AngleAdd1Command}"  Grid.Row="5" Height="10" Width="30" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Path Fill="Black" Data="M 0 6 L 12 6 L 6 0 Z" Height="6" Width="12"/>
        </Button>
        <Button Grid.Column="6" Command="{Binding AngleDeduct1Command}" Grid.Row="5" Height="10" Width="30" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Path Fill="Black" Data="M 0 0 L 6 6 L 12 0 Z"/>
        </Button>

        <Button Grid.Column="9" Command="{Binding AngleAdd1Command}"  Grid.Row="5" Height="10" Width="30" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Path Fill="Black" Data="M 0 6 L 12 6 L 6 0 Z" Height="6" Width="12"/>
        </Button>
        <Button Grid.Column="9" Command="{Binding AngleDeduct1Command}" Grid.Row="5" Height="10" Width="30" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Path Fill="Black" Data="M 0 0 L 6 6 L 12 0 Z"/>
        </Button>

        <TextBox Grid.Column="11" Grid.Row="2" TextWrapping="Wrap" Background="#FFD8D8D8" Text="{Binding ChosenTile,Mode=TwoWay}" Grid.ColumnSpan="2" Margin="16,0,172,0"/>
        <Button Grid.Column="12" Grid.Row="2" Background="#FFD8D8D8" Content="Select Tile" Command="{Binding SelectTileCommand}" Margin="125,0,0,0" />
    </Grid>
</Window>