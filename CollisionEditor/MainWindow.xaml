<Window x:Class="CollisionEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CollisionEditorC#" Height="440" Width="550"
        xmlns:local="clr-namespace:CollisionEditor.viewModel">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="381*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="258*" />
            <ColumnDefinition Width="17*" />
            <ColumnDefinition Width="257*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Center" Grid.Column="0"  Grid.ColumnSpan="5" Foreground="Black" Height="20">
            <MenuItem Header="File" >
                <MenuItem Header="Load" >
                    <MenuItem Header="Tile Strip......               Ctrl+O" Name = "MenuOpenTileStrip" Padding="0,0,-20,0"/>
                    <MenuItem Header="Anglemap...     Ctrl+Shift+O" Name = "MenuOpenAngleMap" Padding="0,0,-20,0"/>
                </MenuItem>

                <MenuItem Header="Unload"  >
                    <MenuItem Header="Tile Strip"/>
                    <MenuItem Header="Anglemap"/>
                </MenuItem>

                <MenuItem Header="Unload All     Ctrl+Shift+U" Padding="0,0,-20,0"  />

                <MenuItem Header="Save">
                    <MenuItem Header="Anglemap"/>
                    <MenuItem Header="Heightmap"/>
                    <MenuItem Header="Widthmap"/>
                    <MenuItem Header="Tiletmap" Name = "MenuSaveTiletmap"/>
                </MenuItem>

                <MenuItem Header="Save Al          Ctrl+Shift+S" Padding="0,0,-20,0" />
                <MenuItem Header="Exit                         Alt+F4" Padding="0,0,-20,0" />

            </MenuItem>
            <MenuItem Header="Help" >
                <MenuItem Header="Help is not exist" FontFamily="Webdings"  />
            </MenuItem>
        </Menu>


        <Image Grid.Column="1" HorizontalAlignment="Left" Height="128" RenderOptions.BitmapScalingMode="NearestNeighbor" Margin="57,74,0,0" Grid.Row="2" VerticalAlignment="Top" Width="128" Name ="ImageOfTile" Stretch="UniformToFill"/>
        <Image Source="/Сетка.png" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" Margin="56,73,0,0" Height="129" Width="129"/>
        



    </Grid>
</Window>