<Window x:Class="LABA5WPF20202.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LABA5WPF20202"
        mc:Ignorable="d"
        Title="MainWindow" Height="440" Width="550">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="381*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="258*" />
            <ColumnDefinition Width="17*" />
            <ColumnDefinition Width="257*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Center" Grid.Column="0"  Grid.ColumnSpan="5" Foreground="Black" Height="20">
            <MenuItem Header="File" FontFamily="Segoe UI Semilight">
                <MenuItem Header="Load"  FontFamily="Segoe UI Semilight">
                    <MenuItem Header="Tile Strip......               Ctrl+O" Padding="0,0,-20,0"  FontFamily="Segoe UI Semilight"/>
                    <MenuItem Header="Anglemap...     Ctrl+Shift+O" Padding="0,0,-20,0"  FontFamily="Segoe UI Semilight"/>
                </MenuItem>

                <MenuItem Header="Unload"  FontFamily="Segoe UI Semilight">
                    <MenuItem Header="Tile Strip"/>
                    <MenuItem Header="Anglemap"/>
                </MenuItem>

                <MenuItem Header="Unload All     Ctrl+Shift+U" Padding="0,0,-20,0"  FontFamily="Segoe UI Semilight"/>

                <MenuItem Header="Save">
                    <MenuItem Header="Anglemap"/>
                    <MenuItem Header="Heightmap"/>
                    <MenuItem Header="Widthmap"/>
                    <MenuItem Header="Tiletmap"/>
                </MenuItem>

                <MenuItem Header="Save Al          Ctrl+Shift+S" Padding="0,0,-20,0" FontFamily="Segoe UI Semilight"/>
                <MenuItem Header="Exit                         Alt+F4" Padding="0,0,-20,0" FontFamily="Segoe UI Semilight"/>

            </MenuItem>
            <MenuItem Header="Help" FontFamily="Segoe UI Semilight">
                <MenuItem Header="Help is not exist" FontFamily="Webdings" />
            </MenuItem>
        </Menu>

    </Grid>
</Window>